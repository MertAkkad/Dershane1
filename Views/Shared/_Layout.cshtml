@{
    var model = ViewBag.KurumsalBilgiler as KurumsalModel;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Dershane</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

    <!--  Layout stili bu CSS'yle -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
 
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="/">
            
            @if (model != null)
            {
                <img src="data:image/jpeg;base64,@Convert.ToBase64String(model.Logo_Data)" alt="Dershane Logo" height="40" />
            }
            else if (!string.IsNullOrEmpty(model?.Logo_Url))
{
    <img src="@Model.Logo_Url" alt="Dershane Logo" height="40" />
}
else
{
    <img src="~/Data/Gorseller/Layout_Gorseller/images.jpg" alt="Dershane Logo" height="40" /> <!-- Fallback image -->
}
        </a>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link" href="/">Anasayfa</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Egitim/Index">Eğitim</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Dokuman/Index">Doküman</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Subeler/Index">Şubeler</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Hakkimizda/Index">Hakkımızda</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Iletisim/Index">İletişim</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Admin/Index">Admin</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Render Body -->
    <div class="page-content">
        @RenderBody()
    </div>
    <!-- jQuery tanimlaniyor-->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- bootstrap tanimlaniyor -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
   
</body>
</html>
