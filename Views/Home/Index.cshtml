    box-shadow: 0 4px 8px rgba(0,0,0,0.2);
    position: relative;
}

.highlight-box {
    flex: 1;
    min-width: 500px;
    height: 100%;
    background: #ffffff;
    position: relative;
    overflow: hidden;
    display: flex;
    flex-direction: column;
  
}

.highlight-box img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: 0.6; /* Make image faded */
    z-index: 1;
}

.highlight-box h3 {
    position: relative;
    z-index: 2;
    margin: 20px;
    color: #000;
    font-size: 1.5em;
    text-shadow: 1px 1px 2px rgba(255, 255, 255, 0.8);
}

.highlight-box h4 {
    position: relative;
    z-index: 2;
    margin: 10px 20px;
    color: #000;
    font-size: 1.3em;
    text-shadow: 1px 1px 2px rgba(255, 255, 255, 0.8);
}

.highlight-box .date {
    position: relative;
    z-index: 2;
    margin: 10px 20px;
    color: #333;
    font-size: 0.9em;
    font-style: italic;
    text-shadow: 1px 1px 2px rgba(255, 255, 255, 0.8);
}

.highlight-box p {
    position: relative;
    z-index: 2;
    margin: 10px 20px;
    color: #000;
    font-size: 1.1em;
    text-shadow: 1px 1px 2px rgba(255, 255, 255, 0.8);
    max-height: 150px;
    overflow: hidden;
