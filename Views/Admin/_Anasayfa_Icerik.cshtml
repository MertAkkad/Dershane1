@model Dershane.Models.Anasayfa_icerik

<link rel="stylesheet" href="~/css/admin_style.css" />

<div class="form-container">
    <h3>@(Model.Id == 0 ? "Add New Anasayfa Icerik" : "Edit Anasayfa Icerik")</h3>
    <form id="anasayfa-icerik-form">
        <input type="hidden" id="Id" name="Id" value="@Model.Id" />
        <input type="hidden" name="tableName" value="Anasayfa_icerik" />

        <div class="form-group">
            <label for="Anasayfa_Baslik">Anasayfa Başlık</label>
            <input type="text" id="Anasayfa_Baslik" name="Anasayfa_Baslik" class="form-control" asp-for="Anasayfa_Baslik" value="@Model.Anasayfa_Baslik" required />
        </div>

        <div class="form-group">
            <label for="Anasayfa_Icerik">Anasayfa İçerik</label>
            <textarea id="Anasayfa_Icerik" name="Anasayfa_Icerik" class="form-control" asp-for="Anasayfa_Icerik" required>@Model.Anasayfa_Icerik</textarea>
        </div>

        <div class="form-group">
            <button class="btn btn-kaydet" type="button" onclick="submitForm()">Kaydet</button>
            <button class="btn btn-iptal" type="button" onclick="closeForm()">İptal</button>
        </div>
    </form>
</div>
