@model Dershane.Models.Banner


<link rel="stylesheet" href="~/css/admin_style.css" />

<div class="form-container">
    <form asp-action="Save" asp-controller="Admin" method="post" enctype="multipart/form-data" id="banner-form">
        <input type="hidden" name="tableName" value="Banner" />
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label for="Banner_Baslik">Banner Başlık</label>
            <input type="text" id="Banner_Baslik" name="Banner_Baslik" class="form-control" asp-for="Banner_Baslik" required />
        </div>

        <div class="form-group">
            <label for="Banner_Icerik">Banner İçerik</label>
            <textarea id="Banner_Icerik" name="Banner_Icerik" class="form-control" asp-for="Banner_Icerik"></textarea>
        </div>


        <div class="form-group">
            <label for="Gorsel_Data">Görsel Yükle</label>
            <input type="file" id="Gorsel_Data" name="Gorsel_Data" class="form-control" accept="image/*" />
            @if (Model?.Gorsel_Data != null)
            {
                <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Gorsel_Data)" alt="Mevcut görsel" />
            }
        </div>        
        <div class="form-group">
            <button class="btn btn-kaydet" type="button" onclick="submitForm()">Kaydet</button>
            <button class="btn btn-iptal" type="button" onclick="closeForm()">İptal</button>
        </div>
    </form>
</div>
