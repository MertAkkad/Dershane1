@model Dershane.Models.DokumanModel

<link rel="stylesheet" href="~/css/admin_style.css" />

<div class="form-container">
    <h3>@(Model.Id == 0 ? "Yeni Döküman Ekle" : "Dökümanı Düzenle")</h3>
    <form id="dokuman-form" asp-action="Save" asp-controller="Admin" method="post" enctype="multipart/form-data">
        <input type="hidden" name="tableName" value="Dokumanlar" />
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label for="Dokuman_Baslik">Döküman Başlık</label>
            <input type="text" id="Dokuman_Baslik" name="Dokuman_Baslik" class="form-control" asp-for="Dokuman_Baslik" value="@Model.Dokuman_Baslik" required />
        </div>

        <div class="form-group">
            <label for="Dokuman_Icerik">Döküman İçerik</label>
            <textarea id="Dokuman_Icerik" name="Dokuman_Icerik" class="form-control" asp-for="Dokuman_Icerik" required>@Model.Dokuman_Icerik</textarea>
        </div>

        <div class="form-group">
            <label for="Gorsel_Data">Görsel Yükle</label>
            <input type="file" id="Gorsel_Data" name="Gorsel_Data" class="form-control" accept="image/*" />
            @if (Model?.Gorsel_Data != null)
            {
                <div class="image-preview">
                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Gorsel_Data)" alt="Mevcut görsel" />
                </div>
            }
        </div>

        <div class="form-buttons">
            <button type="button" class="btn btn-kaydet" onclick="submitForm()">Kaydet</button>
            <button type="button" class=" btn btn-iptal" onclick="closeForm()">İptal</button>
        </div>
    </form>
</div>

